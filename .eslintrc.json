/** @type {import("eslint").Linter.Config} */
{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["next", "next/core-web-vitals", "plugin:@next/next/recommended"],
  "plugins": ["import"],
  "overrides": [
    {
      "files": ["*.js?(x)", "*.ts?(x)"]
    }
  ],
  "rules": {
    "import/order": [
      "warn",
      {
        "newlines-between": "always",
        "pathGroups": [
          {
            "group": "external",
            "pattern": "~/**",
            "position": "after"
          }
        ]
      }
    ]
  }
}
